{% extends 'base.html.twig' %}

{% block title %}Admin index !{% endblock %}

{% block body %}

    <div class="show">
        <div class="jumbotron">
            <div class="container">
                <h1>Mes projets</h1>
            </div>
        </div>
        <div class="show__section">

            <div class="container">
                <div class="row my-3">
                    <a href="{{ path('admin.project.create') }}" class="btn btn-primary">Cr√©er un projet</a>
                </div>
                <div class="row">


                    <table class="table table-striped">
                        {% for project in projects %}
                            <tr>
                                <th scope="row">{{ project.id }}</th>
                                <td>{{ project.titre }}</td>
                                <td><a href="{{ path('admin.project.edit', {id:project.id}) }}" class="btn btn-primary">Editer</a>
                                </td>
                                <td>
                                    <form method="post" action="{{ path('admin.project.delete', {id:project.id}) }}">
                                        <input type="hidden"  name="_method" value="DELETE">
                                        <button class="btn btn-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>


                </div>


            </div>

        </div>
    </div>
{% endblock %}
