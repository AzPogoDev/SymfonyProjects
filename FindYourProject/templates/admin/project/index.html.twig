{% extends 'base.html.twig' %}

{% block title %}Admin index !{% endblock %}

{% block body %}

    <div class="show">
        <div class="jumbotron">
            <div class="container">
                <h1>Mes projets</h1>
            </div>
        </div>
        <div class="show__section">

            <div class="container">
                <div class="row my-3">
                    <a href="{{ path('admin.project.create') }}" class="btn btn-primary">Cr√©er un projet</a>
                </div>
                <div class="row">

                    {% for project in projects %}

                        <table class="table table-striped">
                            <tr>
                                <td>{{ project.id }}</td>
                                <td>{{ project.titre }}</td>
                                <td><a href="{{ path('admin.project.edit', {id:project.id}) }}" class="btn btn-primary">Editer</a></td>
                            </tr>
                        </table>


                    {% endfor %}

                </div>



            </div>

        </div>
    </div>
{% endblock %}
